<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sv.edu.uesocc.tareados.EditarPersona">

    <TextView android:text="EDITAR PERSONA"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nombre_edit"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/apellido_edit"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dui_edit"
        android:hint="DUI"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/correo_edit"
        android:hint="Correo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edad_edit"
            android:hint="Edad"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/sexo_spinner"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aceptar_boton"
            android:text="Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/cancelar_boton"
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

    </LinearLayout>
</LinearLayout>
